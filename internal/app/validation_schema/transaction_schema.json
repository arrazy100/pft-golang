{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Transaction",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "userId": {
            "type": "string",
            "format": "uuid"
        },
        "categoryId": {
            "type": "string",
            "format": "uuid"
        },
        "description": {
            "type": "string",
            "maxLength": 255
        },
        "accountId": {
            "type": "string",
            "format": "uuid"
        },
        "attachmentId": {
            "type": "string",
            "format": "uuid"
        },
        "amount": {
            "type": "string",
            "pattern": "^\\d{1,6}(\\.\\d{1,4})?$"
        },
        "type": {
            "type": "integer",
            "enum": [
                0,
                1,
                2
            ]
        }
    },
    "required": [
        "id",
        "userId",
        "categoryId",
        "description",
        "accountId",
        "attachmentId",
        "amount",
        "type"
    ],
    "additionalProperties": false
}